<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="@color/progressBarRed"
                android:centerColor="@color/progressBarRed"
                android:centerY="1.0"
                android:endColor="@color/progressBarRed"
                android:angle="270"
                />
        </shape>
    </item>
    <item
        android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/teal"
                    android:endColor="@color/teal"
                    android:angle="90" />
            </shape>
        </clip>
    </item>

</layer-list>