<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.allisonreiss.hark.ReminderFragment">

    <ImageView
        android:id="@+id/areiss_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true" />
    <!--   android:src="@mipmap/truiton"/> -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/areiss_image"
        android:layout_centerHorizontal="true"
        android:text="Reminder Fragment"
        android:textSize="30sp"
        android:id="@+id/textView" />

    <android.support.v4.view.ViewPager
        android:id="@+id/myPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/textView"
        android:layout_alignTop="@+id/areiss_image"
        android:layout_marginStart="52dp"
        android:layout_marginTop="105dp" />

</RelativeLayout>